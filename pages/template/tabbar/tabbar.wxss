/* pages/template/tabbar/tabbar.wxss */

.tablist {
  position: fixed;
  bottom: 2rpx;
  left: 0;
  height: 38px;
  border-top: 1px solid #ccc;
  background: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.tabitem {
  border-right: 1px solid #ccc;
  width: 33%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabitem image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}

.tabitem text {
  font-size: 14px;
}
